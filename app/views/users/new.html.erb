<div id="contentwrapper">
	<h1>sign up</h1>
	<p class="gentext">Sign up below. It's free!</p>
	<p class="gentext">All fields are required.</p>
	<p class="gentext">&nbsp;</p>
	
	<form accept-charset="UTF-8" action="/users" class="new_user" id="new_user" method="post">

		<input class="textbox" id="user_name" name="user[name]" size="30" type="text" placeholder="name" />
		
		<input class="textbox" id="user_email" name="user[email]" size="30" type="text" placeholder="email@provider.com" />
		
		<input class="textbox" id="user_password" name="user[password]" size="30" type="password" placeholder="password" />

		<input class="textbox" id="user_password_confirmation" name="user[password_confirmation]" size="30" type="password" placeholder="confirm password" />

		<div id="buttoncontainer" style="display: inline-block;">
			<input class="button" name="commit" type="submit" value="create" />
			<input class="button" name="cancel" type="reset" value="cancel" />
		</div>
	</form>
</div>
